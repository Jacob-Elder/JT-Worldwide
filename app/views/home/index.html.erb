<h1>Home</h1>
<% if @current_user %>
	<h3>Welcome <%= @current_user.email %></h3>
<% end %>

<% if @current_user %>
	<%= form_for :post do |form| %>
		<%= form.email_field :title, placeholder: "Post Title" %>
		<%= form.text_field :link, placeholder: "Share a cool link!" %>
		<%= form.submit 'Post' %>
	<% end %>
<% end %>

<h2>Check Out These Sick Posts</h2>
<% @posts.each do |post| %>
	<a href="<%= post.link %>"><h3><%= post.title %></h3></a>
	<p>posted by: <%= @users.find(post.user_id).name %></p>
<% end %>
